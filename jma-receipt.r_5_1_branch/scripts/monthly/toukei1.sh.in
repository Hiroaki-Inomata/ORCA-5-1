#!/bin/bash

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

#-------------------------------------------#
#    月次統計データ作成
#        $1  TERMID 
#        $2  HOSPID
#        $3  HPSPCD   
#        $4  県番号
#        $5  SRYYM 
#        $6  NYUGAIKBN 
#        $7  FILENM1
#        $8  FILENM2 
#        $9  DATAKBN
#        ${10} HOUKATUKBN
#        ${11} KOJINKBN
#        ${12} CDKBN
#        ${13} JOBID
#        ${14} SHELLID
#        ${15} ERRFILENM
#        ${16} ファイル出力先区分（診療）
#        ${17} ファイル出力先区分（病名）
#        ${19} HOSPNUM
#        ${20} FILENM1 FOLDER（未使用）
#        ${21} FILENM2 FOLDER（未使用）
#-------------------------------------------#

export  PATH=$SITESCRIPTSDIR/allways:$PATCHSCRIPTSDIR/allways:$SCRIPTSDIR/allways:$PATH

        LOG_FILE="/var/log/jma-receipt/${19}toukei1.log"
        [ -e ${LOG_FILE} ] && rm ${LOG_FILE}

        echo "arg7  = [" ${7}  "]" 
        echo "arg8  = [" ${8}  "]" 
        echo "arg12 = [" ${12} "]" 
        echo "arg15 = [" ${15} "]" 
        echo "arg16 = [" ${16} "]" 
        echo "arg17 = [" ${17} "]" 
        echo "arg19 = [" ${19} "]" 

##      エラーファイル削除
	echo "errfile = [" ${MCP_TEMPDIR}/${15}  "]" 
        rm  -f ${MCP_TEMPDIR}/${15}

        rm  -f ${MCP_TEMPDIR}/${19}TOKEI0*


e2sjis(){
  echo "--- nkf  [" $1 " sjis =>" $2 "]"
  nkf -s -Lw $1 > $2
}

e2utf8(){
  echo "--- nkf  [" $1 " utf8 =>" $2 "]"
  nkf --ic=EUC-JIS-2004 --oc=UTF-8 -Lu $1 | tru8.rb > $2
}

        
	    $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBT010 -parameter $1,$2,$4,$5,$6,$9,${10},${13},${14},${19},${15} 
        
        if  [ -e ${MCP_TEMPDIR}/${15} ]; then
            exit 
        else
	        $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBT020 -parameter $2,$3,$5,$1,$9,${11},${13},${14},${19},${15},${7},${8},${16},${17},${20},${21}
	fi

        if  [ -e ${MCP_TEMPDIR}/${15} ]; then
            exit 
	fi

#       漢字コード変換

        case ${12} in
          2)
            [ ${9} != '2' ] && e2sjis "${MCP_TEMPDIR}/${19}toukei01.dat" "${MCP_TEMPDIR}/$7"
            [ ${9} != '1' ] && e2sjis "${MCP_TEMPDIR}/${19}toukei02.dat" "${MCP_TEMPDIR}/$8"
            ;;
          3)
            [ ${9} != '2' ] && e2utf8 "${MCP_TEMPDIR}/${19}toukei01.dat" "${MCP_TEMPDIR}/$7"
            [ ${9} != '1' ] && e2utf8 "${MCP_TEMPDIR}/${19}toukei02.dat" "${MCP_TEMPDIR}/$8"
            ;;
          *)
            if   [ ${9} != '2' ]; then
                echo "--- cp  [" ${MCP_TEMPDIR}/${19}toukei01.dat "=>" ${MCP_TEMPDIR}/$7 "]"
                cp  ${MCP_TEMPDIR}/${19}toukei01.dat ${MCP_TEMPDIR}/$7
            fi 
            if   [ ${9} != '1' ]; then
                echo "--- cp  [" ${MCP_TEMPDIR}/${19}toukei02.dat "=>" ${MCP_TEMPDIR}/$8 "]"
                cp  ${MCP_TEMPDIR}/${19}toukei02.dat ${MCP_TEMPDIR}/$8
            fi
        esac

        $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBJOB -parameter JBE${13}${14},${19}

        exit 
