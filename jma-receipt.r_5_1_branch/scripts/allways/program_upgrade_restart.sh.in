#!/bin/bash

if test -z "$JMARECEIPT_ENV"; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

#monitor再起動（ＳＩＧＨＵＰ）
echo `cat /var/run/jma-receipt/monitor.pid`
	kill -HUP `cat /var/run/jma-receipt/monitor.pid`
#更新元ファイル削除追加
	rm -fr $1
exit

