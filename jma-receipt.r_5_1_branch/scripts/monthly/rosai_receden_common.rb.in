class Recesbt < Receden_common_const

  attr_reader :form,:nyugai

  def initialize(formsbt)

   @form    = ""
   @nyugai = ""
   @exists = true

   if FORMSBT.key?(formsbt)
     @nyugai = FORMSBT[formsbt][0]
     @form   = FORMSBT[formsbt][1]
   else
     @exists = false
   end
  end

  def exists?
    @exists
  end

end
