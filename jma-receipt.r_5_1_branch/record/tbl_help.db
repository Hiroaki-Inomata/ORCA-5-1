tbl_help {
	HOSPNUM				number(2,0);
	HELPKBN				char(1);
	KEY_OPID			varchar(16);
	LDNAME				varchar(20);
	MENUNUM1			number(4);
	MENUNUM2			number(4);
	EDANUM				number(4);
	MENU2FLG			number(1);
	MENU				varchar(60);
	HELP				varchar(100);
	TERMID   			varchar(64);
	OPID     			varchar(16);
	CREYMD   			char(8);
	UPYMD    			char(8);
	UPHMS				char(6);
};

primary	{
	HOSPNUM,HELPKBN,KEY_OPID,LDNAME,MENUNUM1,MENUNUM2,EDANUM;
};

path	key 	{
	DBSELECT	{
		DECLARE tbl_help_key_csr CURSOR FOR
		SELECT *
		FROM tbl_help
		WHERE 	HOSPNUM	= :HOSPNUM
			AND   HELPKBN    =   :HELPKBN
			AND   KEY_OPID     =   :KEY_OPID
			AND   LDNAME       =   :LDNAME
			AND   MENUNUM1     =   :MENUNUM1
			AND   MENUNUM2     =   :MENUNUM2
			AND   EDANUM       =   :EDANUM
		;
	};
};

path	key1 	{
	DBSELECT	{
		DECLARE tbl_help_key1_csr CURSOR FOR
		SELECT *
		FROM tbl_help
		WHERE 	HOSPNUM	= :HOSPNUM
			AND   HELPKBN    =   :HELPKBN
			AND   KEY_OPID     =   :KEY_OPID
			AND   LDNAME       =   :LDNAME
			AND   MENUNUM2     =   0
			AND  (EDANUM       =   0
			 OR   EDANUM       =   1 )
			ORDER   BY         MENUNUM1,
                                           MENUNUM2,
                                           EDANUM
		;
	};
};

